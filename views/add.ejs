<%- include partials/header.ejs %>

<main class="container">
	<h1>Add a new business to the directory</h1>
	<form method="post" action="add">
		<fieldset>
			<label for="name" class="col-sm-2">Company Name:</label>
			<input type="text" name="name" id="name" required>
		</fieldset>
		<fieldset>
			<label for="category" class="col-sm-2">Category:</label>
			<input type="text" name="category" id="category" required>
		</fieldset>
		<fieldset>
			<label for="description" class="sol-sm-2">Description:</label>
			<div>
				<textarea name="description" id="description" cols="30" rows="10"></textarea>
			</div>
		</fieldset>
		<fieldset>
		<div>
			<label for="phone" class="col-sm-2">Phone:</label>
			<input type="tel" name="phone" id="phone">
		</div>
		<div>
			<label for="email" class="col-sm-2">Email:</label>
			<input type="email" name="email" id="email">
		</div>
		<div>
			<label for="website" class="col-sm-2">Website:</label>
			<input type="url" name="website" id="website">
		</div>
		</fieldset>
		<button class="btn btn-primary col-sm-offset-2">Submit</button>

	</form>	
</main>
    
<%- include partials/footer.ejs %>